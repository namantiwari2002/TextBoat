    <textarea id="review" rows="10" cols="50" name = "review"></textarea><br><br>

    <input type = "submit" value = "Finish Writing" />
    
  </form><br>

  <div id="emojiSection"></div>

  <div id="statsSection"></div>

  <script type="text/javascript" src="../senti.js"></script>
  <script type="text/javascript" src="../more_tags.js"></script>
  <script type="text/javascript" src="../hem.js"></script>
  <script type="text/javascript" src="../text_stats.js"></script>



</body>
</html>
